{
  "replacementPatterns": [
    {
      "comment": "规则1：处理静态资源。使用 file:// 协议 + 占位符，指向绝对路径",
      "pattern": "^/(.*\\.(png|jpg|jpeg|gif|svg|webp|ico|pdf|mp4))$",
      "replacement": "file://__WORK_DIR__/docs/.vuepress/public/$1"
    },
    {
      "comment": "规则2：处理 Markdown 页面索引。同样使用绝对路径",
      "pattern": "^/",
      "replacement": "file://__WORK_DIR__/docs/"
    }
  ],
  "ignorePatterns": [
    { "pattern": "^http://localhost" }
  ],
  "retryOn429": true,
  "retryCount": 2
}