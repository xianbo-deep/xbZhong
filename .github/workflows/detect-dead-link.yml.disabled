on:
  schedule:
    - cron: '0 16 * * *'
  workflow_dispatch:

jobs:
  dead-link-detection:
    runs-on: ubuntu-latest
    steps:
      # 1. æ‹‰å–ä»“åº“
      - name: Checkout repository
        uses: actions/checkout@v3

      # 2. å®‰è£… Node.js
      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '20'

      # 3. å®‰è£… markdown-link-check
      - name: Install markdown-link-check
        run: npm install -g markdown-link-check

      # 4. æ£€æµ‹æ­»é“¾
      - name: Check dead links
        id: deadlinks
        run: |
          # æŸ¥æ‰¾ docs ä¸‹æ‰€æœ‰ Markdown æ–‡ä»¶
          find docs -name "*.md" > md_files.txt

          # åˆå§‹åŒ–æ–‡ä»¶
          touch raw_log.txt
          touch final_errors.txt
          touch formatted_list.txt

          # -------------------------------------------------------------------
          # ğŸ› ï¸ ä¿®æ”¹ç‚¹ 1ï¼šæŒ‡å®šæ–°çš„é…ç½®æ–‡ä»¶è·¯å¾„è¿›è¡Œ sed æ›¿æ¢
          # -------------------------------------------------------------------
          CONFIG_FILE=".github/config/.markdown-link-check.json"

          # æ›¿æ¢å ä½ç¬¦ä¸ºçœŸå®çš„å·¥ä½œè·¯å¾„
          sed -i "s|__WORK_DIR__|$GITHUB_WORKSPACE|g" "$CONFIG_FILE"


          echo "å¼€å§‹æ‰«ææ–‡ä»¶..."

          # å¾ªç¯æ£€æµ‹
          while read file; do
            # -----------------------------------------------------------------
            # ğŸ› ï¸ ä¿®æ”¹ç‚¹ 2ï¼šåœ¨å‘½ä»¤ä¸­é€šè¿‡ -c æŒ‡å®šæ–°çš„é…ç½®æ–‡ä»¶è·¯å¾„
            # -----------------------------------------------------------------
            markdown-link-check "$file" -c "$CONFIG_FILE" -q >> raw_log.txt 2>&1 || true
          done < md_files.txt

          
          # åŒ¹é…åŒ…å« [âœ–] ç¬¦å·æˆ– ERROR å­—çœ¼çš„è¡Œ
          grep -E "\[âœ–\]|ERROR" raw_log.txt > final_errors.txt || true

          # æ ¹æ®è¿‡æ»¤åçš„æ–‡ä»¶æ˜¯å¦æœ‰å†…å®¹æ¥åˆ¤æ–­
          if [ -s final_errors.txt ]; then
            COLOR="#d9534f"  # çº¢è‰²
            echo "Found dead links!"
            # æ ¼å¼åŒ–ä¸º HTML åˆ—è¡¨
            sed 's/^/<li>/; s/$/<\/li>/' final_errors.txt > formatted_list.txt
          else
            COLOR="#28a745"  # ç»¿è‰²
            echo "No dead links found."
            echo "<li>æ­å–œï¼æ²¡æœ‰æ£€æµ‹åˆ°æ­»é“¾ã€‚</li>" > formatted_list.txt
          fi

          # è¾“å‡ºé¢œè‰²å˜é‡
          echo "color=$COLOR" >> $GITHUB_OUTPUT

      # 5. ç”Ÿæˆ HTML é‚®ä»¶
      - name: Prepare email HTML
        run: |
          cp .github/template/deadlink-template.html email.html
          
          # æ’å…¥åˆ—è¡¨
          sed -i "/{{DEADLINK_LIST}}/r formatted_list.txt" email.html
          sed -i "/{{DEADLINK_LIST}}/d" email.html
          
          # æ›¿æ¢é¢œè‰²
          sed -i "s|{{COLOR}}|${{ steps.deadlinks.outputs.color }}|g" email.html
          
          # è‡ªåŠ¨æ›¿æ¢å¹´ä»½
          sed -i "s|{{YEAR}}|$(TZ=Asia/Shanghai date '+%Y')|g" email.html

          # æ›¿æ¢æ—¶é—´
          BJ_TIME=$(TZ='Asia/Shanghai' date +'%Y-%m-%d %H:%M')
          sed -i "s|{{BJ_TIME}}|$BJ_TIME|g" email.html

      # 6. å‘é€é‚®ä»¶
      - name: Send email
        uses: dawidd6/action-send-mail@v3
        with:
          server_address: smtp.qq.com
          server_port: 465
          username: ${{ secrets.MAIL_USERNAME }}
          password: ${{ secrets.MAIL_PASSWORD }}
          subject: "åšå®¢æ­»é“¾æ£€æµ‹ç»“æœ"
          to: "2396768163@qq.com"
          from: "Github Action <${{ secrets.MAIL_USERNAME }}>"
          html_body: file://email.html